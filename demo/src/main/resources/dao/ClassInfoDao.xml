<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.dao.ClassInfoDao">


    <insert id="save" parameterType="classInfoDTO" keyProperty="classId" useGeneratedKeys="true">
      insert into classInfo(classNumber , className  , createTime) values(#{classNumber} , #{className}  , #{createTime})
   </insert>

    <select id="get" parameterType="classInfoDTO" resultType="classInfo">
        select * from classInfo
        <where>
            <if test="classId != null">
                and classId = #{classId}
            </if>
            <if test="classNumber != null">
                and classNumber = #{classNumber}
            </if>
        </where>
    </select>

    <update id="update" parameterType="classInfoDTO">
        update classInfo
        <set>
            <if test="className != null">
                className = #{className},
            </if>
            <if test="classNumber != null">
                classNumber = #{classNumber},
            </if>
        </set>
        where classId = #{classId}
    </update>

    <delete id="delete" parameterType="int">
      delete from classInfo where classId = #{classId}
    </delete>

    <select id="list" parameterType="listClassInfoDTO" resultType="classInfo">
        select * from classInfo
        <where>
            <if test="className != null">
                and className like CONCAT('%',#{className},'%')
            </if>
        </where>
    </select>


</mapper>
