<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.dao.StudentDao">

    <insert id="save" parameterType="studentDTO" keyProperty="studentId" useGeneratedKeys="true">
    insert into student(studentNumber , studentName , createTime) values(#{studentNumber} , #{studentName} , #{createTime})
   </insert>

    <select id="get" parameterType="studentDTO" resultType="student">
        select * from student
        <where>
            <if test="studentId != null">
                and studentId = #{studentId}
            </if>
            <if test="studentNumber != null">
                and studentNumber = #{studentNumber}
            </if>
        </where>
    </select>

    <select id="list" parameterType="listStudentDTO" resultType="student">
        select * from student
        <where>
            <if test="studentName != null">
                and studentName like CONCAT('%',#{studentName},'%')
            </if>
        </where>
    </select>

    <update id="update" parameterType="studentDTO">
        update student
        <set>
            <if test="studentName != null">
                studentName = #{studentName},
            </if>
            <if test="studentNumber != null">
                studentNumber = #{studentNumber},
            </if>
        </set>
        where studentId = #{studentId}
    </update>

    <delete id="delete" parameterType="int">
      delete from student where studentId = #{studentId}
    </delete>


</mapper>
