<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.mapper.StudentMapper">

    <insert id="save" parameterType="addStudentDTO">
    insert into student(studentNumber , studentName , createTime) values(#{studentNumber} , #{studentName} , #{createTime})
   </insert>

    <select id="get" parameterType="string" resultType="student">
      select * from student where studentNumber = #{studentNumber}
    </select>

    <select id="list" parameterType="listStudentDTO" resultType="student">
        select * from student
        <where>
            <if test="studentName != null">
                and studentName like CONCAT('%',#{studentName},'%')
            </if>
        </where>
    </select>

    <update id="update" parameterType="updateStudentDTO">
      update student set studentName = #{studentName} where studentNumber = #{studentNumber}
    </update>

    <delete id="delete" parameterType="string">
      delete from student where studentNumber = #{studentNumber}
    </delete>



</mapper>
