<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.dao.ClazzDao">


    <insert id="save" parameterType="clazzDTO" keyProperty="clazzNumber" useGeneratedKeys="true">
      insert into clazz(clazzId , clazzName  , createTime) values(#{clazzId} , #{clazzName}  , now())
   </insert>

    <select id="get" parameterType="clazzDTO" resultType="clazz">
        select * from clazz where clazzNumber = #{clazzNumber}
    </select>

    <select id="getById" parameterType="string" resultType="clazz">
        select * from clazz where clazzId = #{clazzId}
    </select>

    <update id="update" parameterType="clazzDTO">
        update clazz
        set
                clazzName = #{clazzName},
                clazzId = #{clazzId}
        where clazzNumber = #{clazzNumber}
    </update>

    <delete id="delete" parameterType="int">
      delete from clazz where clazzNumber = #{clazzNumber}
    </delete>

    <select id="list" parameterType="clazzQueryDTO" resultType="clazz">
        select * from clazz
        <where>
            <if test="clazzName != null">
                and clazzName like CONCAT('%',#{clazzName},'%')
            </if>
        </where>
    </select>


</mapper>
